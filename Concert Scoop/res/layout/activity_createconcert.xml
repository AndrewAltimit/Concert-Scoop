<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LogInActivity" >

    <fragment
        android:id="@+id/frag1"
        android:name="edu.augustana.concertscoop.views.NavigationBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/NameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30sp"
        android:layout_marginTop="22dp"
        android:text="Name:" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/NameLabel"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/NameLabel"
        android:ems="10" >

        <requestFocus />

    </EditText>

    <TextView
        android:id="@+id/CityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/NameLabel"
        android:layout_marginTop="22dp"
        android:text="City:" />

    <EditText
        android:id="@+id/City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/CityLabel"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Name"
        android:ems="10" />

    <TextView
        android:id="@+id/StateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/CityLabel"
        android:layout_marginTop="22dp"
        android:text="State:" />

    <EditText
        android:id="@+id/State"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/StateLabel"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/City"
        android:ems="10" />

        <TextView
        android:id="@+id/ZipLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/StateLabel"
        android:layout_marginTop="22dp"
        android:text="Zip:" />

    <EditText
        android:id="@+id/Zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ZipLabel"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/State"
        android:ems="10"
        android:inputType="number" />
    
            <TextView
        android:id="@+id/DateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ZipLabel"
        android:layout_marginTop="22dp"
        android:text="Date:" />

    <EditText
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/DateLabel"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Zip"
        android:ems="10"
        android:inputType="date" />
    
                <TextView
        android:id="@+id/TimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/DateLabel"
        android:layout_marginTop="22dp"
        android:text="Time:" />

    <EditText
        android:id="@+id/Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TimeLabel"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Date"
        android:ems="10"
        android:inputType="time" />

    <Button
        android:id="@+id/Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Submit Concert" />
    
</RelativeLayout>